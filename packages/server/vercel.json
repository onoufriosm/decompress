{
  "buildCommand": "npm run build",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index" }
  ],
  "crons": [
    {
      "path": "/api/digest/send?frequency=daily",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/digest/send?frequency=weekly",
      "schedule": "0 8 * * 0"
    }
  ]
}
